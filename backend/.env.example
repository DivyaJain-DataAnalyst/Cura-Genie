# CuraGenie Backend Environment Variables - Production Ready

# Database Configuration
DATABASE_PATH=curagenie_real.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/curagenie_db

# API Configuration
API_HOST=0.0.0.0
PORT=8000
DEBUG=false
ENVIRONMENT=production

# Security & Authentication
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# File Upload Settings
MAX_FILE_SIZE_MB=100
UPLOADS_DIR=uploads
ALLOWED_FILE_TYPES=.vcf,.vcf.gz,.fastq,.fq,.fastq.gz,.fq.gz

# Genomic Processing Settings
MAX_VARIANTS_STORE=1000
ENABLE_REAL_GENOMIC_ANALYSIS=true
PRS_DISEASES=diabetes,alzheimer,heart_disease

# OpenAI Configuration (Optional - for enhanced chatbot)
OPENAI_API_KEY=your-openai-api-key-here-optional
USE_OPENAI_CHATBOT=false

# Application Info
APP_NAME=CuraGenie API
API_VERSION=2.0.0-production
API_DESCRIPTION=AI-Powered Healthcare Platform with Real Genomic Processing

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance
WORKERS=4
MAX_CONNECTIONS=100
KEEP_ALIVE=2

# Health Check
HEALTH_CHECK_INTERVAL=30

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=25
MAX_WS_CONNECTIONS=50
