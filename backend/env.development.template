# Development Environment Configuration Template
# Copy this file to .env.development and modify as needed

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=sqlite:///./curagenie_dev.db
REDIS_URL=redis://localhost:6379/0

# CORS (Development)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security (Development - NOT for production)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# External Services (Development)
OPENAI_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=curagenie-genomic-data-dev
AWS_REGION=us-east-1

# Features
ENABLE_GENOMIC_ANALYSIS=true
ENABLE_MRI_ANALYSIS=true
ENABLE_AI_CHATBOT=true
MAX_FILE_SIZE_MB=100

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo

# Logging
LOG_FILE_PATH=logs/curagenie_dev.log
ERROR_LOG_PATH=logs/errors_dev.log
REQUEST_LOG_PATH=logs/requests_dev.log
OPERATION_LOG_PATH=logs/operations_dev.log
LOG_RETENTION_DAYS=7
ENABLE_REQUEST_LOGGING=true
ENABLE_OPERATION_LOGGING=true
ENABLE_ERROR_TRACKING=true
ERROR_ALERT_THRESHOLD=5
